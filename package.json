{
  "name": "canonhead",
  "version": "1.0.0",
  "description": "Open source Tabletop RPG client.",
  "main": "electron/main.js",
  "scripts": {
    "build": "./build.sh && webpack && ./copy_assets.sh",
    "host": "sudo mkdir -p /var/www/canonhead/files && sudo cp -r dist/* /var/www/canonhead/",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "package-darwin": "electron-forge package --platform darwin",
    "package-linux": "electron-forge package --platform linux",
    "package-win32": "electron-forge package --platform win32",
    "make": "electron-forge make",
    "make-darwin": "electron-forge make --platform darwin",
    "make-linux": "electron-forge make --platform linux",
    "make-win32": "electron-forge make --platform win32",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Miravalier/canonhead.git"
  },
  "author": "Benjamin Miramontes Jr.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Miravalier/canonhead/issues"
  },
  "homepage": "https://github.com/Miravalier/canonhead",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "@types/jquery": "^3.5.8",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-resizable": "^1.7.4",
    "css-loader": "^6.5.1",
    "electron": "^15.3.1",
    "style-loader": "^3.3.1",
    "webpack": "^5.64.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@apollo/client": "^3.4.17",
    "electron-squirrel-startup": "^1.0.0",
    "graphql": "^15.7.2",
    "jquery": "^3.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-draggable": "^4.4.4",
    "react-resizable": "^3.0.4",
    "subscriptions-transport-ws": "^0.11.0",
    "update-electron-app": "^2.0.1"
  },
  "build": {
    "appId": "dev.miramontes.canonhead",
    "productName": "Canonhead",
    "copyright": "Copyright Â© 2021 Benjamin Miramontes Jr.",
    "mac": {
      "icon": "./electron/icon.icns",
      "category": "public.app-category.games"
    },
    "win": {
      "icon": "./electron/icon.png"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./electron/icon.png",
        "ignore": [
          "^/(?!(electron|node_modules|package\\.json))"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "certificateFile": "./canonhead.pfx",
            "iconUrl": "./electron/icon.ico",
            "setupExe": "CanonheadSetup.exe",
            "setupIcon": "./electron/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "Benjamin Miramontes Jr.",
              "homepage": "https://github.com/Miravalier/canonhead",
              "icon": "./electron/icon.png",
              "productName": "Canonhead",
              "categories": [
                "Game"
              ]
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "maintainer": "Benjamin Miramontes Jr.",
              "homepage": "https://github.com/Miravalier/canonhead",
              "icon": "./electron/icon.png",
              "license": "MIT",
              "productName": "Canonhead",
              "categories": [
                "Game"
              ]
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Miravalier",
              "name": "canonhead"
            }
          }
        }
      ]
    }
  }
}
