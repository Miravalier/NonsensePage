{
    "options": {
        "require-root": true
    },
    "targets": {
        "mobile/dnd.html": {
            "destination": "/var/www/miravalier/"
        },
        "dnd.html": {
            "destination": "/var/www/miravalier/"
        },
        "dnd.js": {
            "destination": "/var/www/miravalier/res/dnd/"
        },
        "dnd.py": {
            "destination": "/var/wss/",
            "install-commands": ["service dnd.wss restart"],
            "dependencies": ["systemd"]
        },
        "systemd": {
            "destination": "/etc",
            "install-commands": ["systemctl daemon-reload"]
        },
        "res": {
            "destination": "/var/www/miravalier/"
        }
    }
}
